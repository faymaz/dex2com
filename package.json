{
  "name": "dex2com",
  "version": "1.0.1",
  "description": "Synchronize glucose data between Dexcom Share accounts across different regions. Enables cross-region glucose monitoring for diabetes management apps like Omnipod 5 that require specific regional servers.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "dex2com": "index.js"
  },
  "scripts": {
    "start": "node index.js",
    "sync": "node index.js --once",
    "daemon": "node index.js --daemon"
  },
  "keywords": [
    "dexcom",
    "glucose",
    "cgm",
    "diabetes",
    "sync"
  ],
  "author": "faymaz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faymaz/dex2com.git"
  },
  "bugs": {
    "url": "https://github.com/faymaz/dex2com/issues"
  },
  "homepage": "https://github.com/faymaz/dex2com#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
